.container {
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 20px 0;
  padding-bottom: 100px;
}
.detail-image {
  width: 100vw;
  max-width: 100vw;
  height: auto;
  display: block;
}

/* 互动栏样式 */
.action-bar {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20px 0;
  margin-top: 20px;
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
  background-color: #ffffff;
  position: sticky;
  bottom: 0;
  z-index: 10;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  gap: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.action-item:active {
  transform: scale(0.95);
  opacity: 0.7;
}

.action-text-large {
  font-size: 28px;
  line-height: 1;
}

.action-text {
  font-size: 12px;
  color: #666;
}

/* 评论输入框样式 */
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-top: 1px solid #f0f0f0;
  padding: 12px 15px;
  display: flex;
  gap: 10px;
  z-index: 100;
}

.comment-input {
  flex: 1;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 8px 12px;
  font-size: 14px;
  box-sizing: border-box;
  height: 40px;
  resize: none;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.comment-btn {
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 8px;
  padding: 8px 16px;
  font-size: 14px;
  min-width: 50px;
  height: 40px;
}

/* 评论列表样式 */
.comments-list {
  background-color: #ffffff;
  padding: 20px 15px;
  margin-top: 20px;
  margin-bottom: 20px;
}

.comments-header {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  padding: 10px 0;
  border-bottom: 1px solid #f0f0f0;
  margin-bottom: 15px;
}

.comment-item {
  padding: 15px 0;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 10px;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-content {
  flex: 1;
}

.comment-text {
  font-size: 14px;
  color: #333;
  line-height: 1.6;
  word-break: break-word;
  margin-bottom: 8px;
}

.comment-time {
  font-size: 12px;
  color: #999;
}

.comment-delete {
  font-size: 12px;
  color: #ff6b6b;
  padding: 4px 8px;
  border: 1px solid #ff6b6b;
  border-radius: 4px;
  white-space: nowrap;
  cursor: pointer;
}