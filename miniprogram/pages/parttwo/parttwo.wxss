.content {
  position: relative;
  min-height: 100vh;
}

.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.search-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 12rpx;
  padding: 8rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.search-input {
  flex: 5;
  padding: 8rpx 12rpx;
  font-size: 32rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  outline: none;
}

.search-button {
  flex: 1;
  margin-left: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 32rpx;
  background-color: #1890ff;
  color: white;
  border: none;
  border-radius: 8rpx;
}

.search-button:active {
  background-color: #096dd9;
}

.items-container {
  padding: 20rpx;
  position: relative;
  z-index: 1;
}

.item-wrapper {
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.item-title {
  padding: 20rpx;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

.image-container {
  width: 100%;
  aspect-ratio: 16 / 9;
  overflow: hidden;
  position: relative;
}

.item-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
  object-position: top;
}
